#!/usr/bin/env -S mycmd myproject run
# -*- mode: shell-script; sh-shell: bash; sh-basic-offset: 4; sh-indentation: 4; coding: utf-8 -*-
# shellcheck shell=bash

set -o nounset -o errexit -o errtrace -o pipefail

# --------------------------------------------------------------------------------------------------
# List Fileset Tasks
myproject.register_task_definition_file_description "Tasks for listing files in my dotfiles filesets"

myproject.register_task_with_fileset all-files \
    myproject.list_files \
    ALL_FILES
myproject.register_task_description all-files "List all files in the project."

myproject.register_task_with_fileset task-definition-files \
    myproject.list_files \
    TASK_DEFINITION_FILES
myproject.register_task_description task-definition-files "List all of the task definition files in the project."

myproject.register_task_with_fileset all-bash-scripts \
    myproject.list_files \
    ALL_BASH_SCRIPTS
myproject.register_task_description all-bash-scripts "List all of the Bash script files in the project."

myproject.register_task_with_fileset all-command-groups \
    myproject.list_files \
    ALL_COMMAND_GROUPS
myproject.register_task_description all-command-groups "List all of the MyCmd Command Group files in the project."

myproject.register_task_with_fileset all-commands \
    myproject.list_files \
    ALL_COMMANDS
myproject.register_task_description all-commands "List all of the MyCmd Command files in the project."

mycmd.trace "Finished loading the list task definition file."
